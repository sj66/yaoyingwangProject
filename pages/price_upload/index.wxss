/* pages/price_upload/index.wxss */
.container {
  width: 100%;
  height: 100%;
  background-color: #fff;
} 
.file-header{
  width: 100%;
  display: flex;
  font-size: 24rpx;
  justify-content: space-around;
  align-items: center;
}
.file-header-search{
  width: 400rpx;
  height: 70rpx;
  background-color: #ffffff;
}
.search-file{
  width: 100%;
  height: 100%;
  display: flex;
  justify-self: start;
  align-items: center;
  border-radius: 12rpx;
  margin: 0 auto;
  border: 2rpx solid #eeeeee;
}
.search-file image{
  width: 50rpx;
  height: 50rpx;
  padding: 0 20rpx;
}
.search-input{
  width: 80%;
  height: 70rpx;
  font-size: 24rpx;
}
/* 上传 */
.file-header-upload{
  width: 150rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 70rpx;
  font-size: 26rpx;
  color: #fff;
  background-color: #12b7f5;
}
.upload-icon{
  font-size: 48rpx;
  margin-right: 10rpx;
}
/* 表格 */
.table {
  width: 100%;
  border: 0px solid darkgray;
  margin-top: 30rpx;
}
.tr {
  padding: 0 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.td {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  text-align: left;
}
.td-1{
 width: 50%;
}
.td-2{
  width: 30%;
}
.td-3{
  width: 20%;
}
.bg-g{
  background: #ffffff;
}
.th {
  font-size: 24rpx;
  color: #777777;
  height:60rpx;
  line-height: 60rpx;
  text-align: left;
  background: #f3f3f3;
}
.th-1{
  width: 50%;
 }
 .th-2{
   width: 30%;
 }
 .th-3{
   width: 20%;
 }