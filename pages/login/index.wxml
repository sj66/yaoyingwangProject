<view class="container">
  <view class="login-icon">
    <image class="login-img" src="../news/img/bg.png"></image>
  </view>
  <view class="login-from">
    <!-- 账号 -->
    <view class="inputView">
      <image class="nameImage" src="../news/img/name.png"></image>
      <label class="loginLab">账号</label>
      <input class="inputText" placeholder="请输入账号" bindinput="phoneInput"/>
    </view>
    <!-- 密码 -->
    <view class="inputView">
      <image class="keyImage" src="../news/img/key.png"></image>
      <label class="loginLab">密码</label>
      <input class="inputText" password="true" placeholder="请输入账号" bindinput="passwordInput"/>
    </view>
    <view class="forgetPassword" bindtap="onforget">忘记密码</view>
    <!-- 按钮 -->
    <view class="loginBtnView">
      <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="login">登录</button>
    </view>
    <view class="register" bindtap="onregister">去注册</view>
  </view>
</view>