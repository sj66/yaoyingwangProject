/* pages/store_details/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #ededed;
} 
.table {
  border: 2px solid darkgray;
  width: 100%;
  margin-top: 30rpx;
  margin-right: 30rpx;
  margin-left: 30rpx;
  
 
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 90rpx;
  line-height: 90rpx;
  align-items: center;
}
.td {
    justify-content: center;
    display: flex;
    text-align: center;
    border-right: 2px solid #ddd;
    height: 100%;
}
.td-1 {
    width:29%;
    justify-content: center;
    display: flex;
    text-align: center;
    border-right: 2px solid #ddd;
    height: 100%;
}
.td-2 {
    width:70%;
    justify-content: center;
    border-right: 2px solid #ddd;
    text-align: left;
    height: 100%;
    max-width: 100%;
    padding: 40rpx 0;
}
.bg-w{
  background: #afb4db;
 
}
.bg-g{
  background: #E6F3F9;
}
.bg-g2{
  background: #fff;
}
.th {
  width: 29%;
  justify-content: center;
  color: #fff;
  display: flex;
  height: 90rpx;
  align-items: center;
  border-right: 2px solid #ddd;
}
.th-2 {
  width: 70%;
  justify-content: center;
  color: #fff;
  display: flex;
  height: 90rpx;
  align-items: center;
  max-height:  90rpx;
  max-width: 80%;
}
.th-text {
  width: 70%;
  justify-content: center;
  color: #000;
  display: block;
  height: 90rpx;
  align-items: center;
  max-height:  90rpx;
  max-width: 70%;
}
