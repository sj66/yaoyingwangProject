/* pages/sales/index.wxss */
/* 销量导航栏样式 */
.search{
  width: 100%;
  height: 100rpx;
  background-color: #eeeeee;
}
.search-input{
  width: 95%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 26rpx;
  text-indent: 40rpx;
  border-radius: 10rpx;
  background-color: #fff;
  margin: 0 auto;
  margin-top: 15rpx;
}
.swiper-tab {
  width: 100%;
  display: flex;
  flex-direction: row;
  line-height: 80rpx;
  border-bottom: 2rpx solid #999999;
  background-color: #fff;
  z-index: 99;
}
.tab-item { 
  width: 33.333333%;
  text-align: center;
  font-size: 30rpx;
  color: #777;
}
.swiper {
  margin-top: 40rpx;
  width: 100%;
  height: 100vh;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.click {
  font-weight: bold;
  color: #09bb07;
  border-bottom: 5rpx solid #09bb07; 
} 
/* 折线图 */
.charts {
  width: 100%;
  height: 500rpx;
  background-color: #FFFFFF;
  margin: 0 auto;
}
/* 日期导航栏 */
.swiper-tabs {
  width: 100%;
  display: flex;
  justify-content: space-around;
  line-height: 50rpx;
  z-index: 99;
}
.tab-items { 
  width: 15%;
  text-align: center;
  font-size: 30rpx;
  color: #777;
  border-radius: 6rpx;
  background-color: #eeeeee;
}
.swipers {
  margin-top: 30rpx;
  width: 100%;
  height: 100vh;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.on {
  font-weight: bold;
  color: #fff;
  background-color: #09bb07;
} 
/* 团队排名 */
.team-ranking{
  display: flex;
  padding: 20rpx;
  font-size: 24rpx;
  border-top: 2rpx solid #eeeeee;
  justify-content: center;
  align-items: center;
}
.team-ranking-td{
  width:33.333333%;
  /* text-align: center; */
  overflow: hidden;/*超出部分隐藏*/
  text-overflow:ellipsis;/* 超出部分显示省略号 */
  white-space: nowrap;/*规定段落中的文本不进行换行 */
}
/* 表格 */
.table {
  margin: 0 10rpx;
  border: 1px solid #eeeeee;
  box-sizing: border-box;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
}
.td {
    height: 60rpx;
    line-height: 60rpx;
    font-size: 28rpx;
    justify-content: center;
    text-align: center;
}
.td-1,
.td-4{
 width: 11%;
}
.td-3{
  width: 20%;
}
.td-2{
  width: 58%;
  text-align: left;
  overflow: hidden;/*超出部分隐藏*/
  text-overflow:ellipsis;/* 超出部分显示省略号 */
  white-space: nowrap;/*规定段落中的文本不进行换行 */
 }
.th {
  justify-content: center;
  /* background: -webkit-gradient(linear, 0% 25%, 75% 100%, from(#73d2b2), to(#6cd8b3)); */
  background-color: #eeeeee;
  /* color: #fff; */
  display: flex;
  height:60rpx;
  align-items: center;
}
.th-1,
.th-4{
 width: 11%;
}
.th-3{
  width: 20%;
}
.th-2{
  width: 58%;
 }