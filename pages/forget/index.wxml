<!--index.wxml-->
<view class="container">
  <view class="list">
    <view class="phone">手机号码：</view>
    <input type="number" placeholder="请输入手机号码"/>
  </view>
  <view class="list">
    <view class="verify">验证码：</view>
    <input placeholder="请输入验证码"/>
    <button type="number" style="width:260rpx;font-size:26rpx;color:#ffffff;background-color:#09bb07">发送验证码</button>
  </view>
  <view class="list">
    <view class="password">密码：</view>
    <input type="password" placeholder="请输入密码"/>
  </view>
  <button style="margin-top:200rpx;color:#ffffff;background-color:#09bb07">确定</button> 
</view>
