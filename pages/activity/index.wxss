/* pages/activity/index.wxss */
.container{
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.activity-name{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: end;
  border-bottom: 2rpx solid #dddddd;
}
.title{
  font-size: 36rpx;
  margin-top: 50rpx;
}
.content{
  font-size: 24rpx;
  color: #999999;
  line-height: 80rpx;
}
.activity-list{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 40rpx;
}
.example,
.activity-list-li,
.continue{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-indent: 30rpx;
  background-color: #eeeeee;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}
.continue{
  align-items: center;
  color: #4c90fb;
  text-indent: 15rpx;
}
.continue-box{
  width: 200rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.submit-btn{
  width: 400rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  color: #ffffff;
  border-radius: 10rpx;
  background-color: #b5d3fe;
  margin-top: 100rpx;
}