/* pages/customer/index.wxss */
.container{
  margin-left: 10rpx;
  margin-right: 10rpx;
}
/* 导航栏 */
.swiper-tab {
  width: 100%;
  display: flex;
  flex-direction: row;
  line-height: 80rpx;
  border-bottom: 2rpx solid #999999;
  border-left: 2rpx solid #999999;
  background-color: #fff;
  margin-top: 20rpx;
}
.tab-item { 
  width: 50%;
  text-align: center;
  font-size: 30rpx;
  color: #777;
  border-top: 2rpx solid #999999;
  border-right: 2rpx solid #999999;
}
.swiper {
  width: 100%;
  height: 100vh;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.click {
  font-weight: bold;
  color: #ffffff;
  background-color:#999999; 
} 
/* 表格 */
.table {
  width: 100%;
  font-size: 24rpx;
  border-left: 2rpx solid #999999;
  border-top: 2rpx solid #999999;
  box-sizing: border-box;
  margin-top: 20rpx;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
}
.td {
  display: flex;
  height: 70rpx;
  justify-content: center;
  align-items: center;
  border-right: 2rpx solid #999999;
  border-bottom: 2rpx solid #999999;
}
.td-1{
  width: 10%;
}
.td-2{
  width: 15%;
}
.td-3{
  width: 55%;
  display: flex;
  justify-content: start;
  text-indent: 4rpx;
 }
 .td-4{
  width: 20%;
 }
 .t1{
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
 }
 .t2{
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  justify-content: center;
 }