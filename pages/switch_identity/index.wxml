<!--index.wxml-->
<view class="container">
  <van-radio-group value="{{ radio }}" bind:change="onChange" style="width:100%;margin:50rpx 0;">
    <van-cell-group>
      <van-cell title="广东家之和药业有限公司" clickable data-name="1" bind:click="onClick">
        <van-radio slot="right-icon" name="1" />
      </van-cell>
      <van-cell title="广州白云山药业有限公司" clickable data-name="2" bind:click="onClick">
        <van-radio slot="right-icon" name="2" />
      </van-cell>
    </van-cell-group>
  </van-radio-group>
  <view class="onCutover" bindtap="onCutover">
      <image class="userset-icon" src="../news/img/new.png"></image>
      <text>创建企业</text>
  </view>
  <view class="onCutover" bindtap="onTeam">
      <image class="userset-icon" src="../news/img/team.png"></image>
      <text>创建团队</text>
  </view>
</view>
